#!/bin/sh
#
# you should run this as source, root user
#

# vars 
base_url=http://resources.ohnosequences.com/bg7
version=0.9
bg7_file=bg7.jar
bg7_url=$base_url/$version/$bg7_file
install_base=/opt
bg7_folder=bg7
bg7_install_path=$install_base/$bg7_folder

# create folder, grab files
mkdir -p $bg7_install_path
cd $bg7_install_path
wget $bg7_url
# make bg7.jar exec
chown ec2-user:ec2-user ./*
chmod u+x $bg7_file

