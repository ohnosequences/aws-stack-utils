#!/bin/sh
#
# assuming you're running this as root
# this is for aws Linux AMIs and derivatives; it assumes that
# there's a ec2-user user.

# vars
JAVA_INSTALLER_URL=http://resources.ohnosequences.com/ec2/installers/java-latest

wget -O java.install $JAVA_INSTALLER_URL
chmod u+x java.install
./java.install